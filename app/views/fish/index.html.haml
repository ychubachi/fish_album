%header
  %h1
    - if @family
      = "#{@family.name_jp}科の魚一覧"
    - else
      魚一覧
  - if @family
    %button= link_to "新規（#{@family.name_jp}）", new_family_fish_path(@family)
  - else
    %button= link_to '新規（魚）', new_fish_path
%table
  %tr
    %th 科
    %th 和名
    %th 代表写真
    %th 操作
    %th 一覧
  - @fish.each do |fish|
    %tr
      %td= "#{fish.family.name_jp}科" if fish.family
      %td= fish.name_jp
      - if fish.thumb_photo
        %td= image_tag fish.thumb_photo.file.thumb.url
      - else
        %td no photo
      %td
        %button= link_to '表示', fish
        %button= link_to '編集', edit_fish_path(fish)
        %button= link_to '削除', fish, :confirm => 'まじです？', :method => :delete
      %td
        %button= link_to '写真', fish_photos_path(fish)
