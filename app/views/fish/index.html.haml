%header
  = link_to '科一覧', families_path
  %h1
    - if @family
      = "#{@family.name_jp}科の魚一覧"
    - else
      魚一覧
  %button= link_to '新規（魚）', new_fish_path
%table
  %tr
    %th 和名
    %th 英名
    %th 学名
    %th 一覧
    %th 操作
  - @fish.each do |fish|
    %tr
      %td= fish.name_jp
      %td= fish.name_en
      %td= fish.name_la
      %td
        %button= link_to '一覧', fish_photos_path(fish)
      %td
        %button= link_to '表示', fish
        %button= link_to '編集', edit_fish_path(fish)
        %button= link_to '削除', fish, :confirm => 'まじです？', :method => :delete
