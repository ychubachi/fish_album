= content_for :header do
  %h1= @fish.name_jp
  .menu
    %button= link_to '編集', edit_fish_path(@fish)
    %button= link_to '削除', @fish, :confirm => 'まじでまじすか？', :method => :delete
    %button= link_to "#{@fish.name_jp}の写真一覧", fish_photos_path(@fish)
    %button= link_to "#{@fish.name_jp}の写真追加", new_fish_photo_path(@fish)

%hr  
- if @fish.thumb_photo
  = image_tag @fish.thumb_photo.file.mobile.url
.field
  = t '科'
  = @fish.family.name_jp
.field
  = t 'activerecord.attributes.fish.name_jp'
  = @fish.name_jp
.field
  = t 'activerecord.attributes.fish.nickname_jp'
  = @fish.nickname_jp
.field
  = t 'activerecord.attributes.fish.description_jp'
  = @fish.description_jp
.field
  = t 'activerecord.attributes.fish.name_en'
  = @fish.name_en
.field
  = t 'activerecord.attributes.fish.name_la'
  = @fish.name_la
%hr  
