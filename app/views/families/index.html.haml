%div{"data-role" => "header"}
  %h1 科一覧
%div{"data-role" => "content"}
  %table
    %tr
      %th 和名
      %th 英名
      %th 操作
    - @families.each do |family|
      %tr
        %td= family.name_jp
        %td= family.name_en
        %td
          %button= link_to '表示', family
          %button= link_to '編集', edit_family_path(family)
          %button= link_to '削除', family, :confirm => 'まじですか？', :method => :delete
          %button= link_to '一覧', family_fish_index_path(family)
  %button= link_to '新規（科）', new_family_path
