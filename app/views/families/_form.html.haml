-if @family.errors.any?
  #error_explanation
    %h2= "#{pluralize(@family.errors.count, "error")} prohibited this family from being saved:"
    %ul
      - @family.errors.full_messages.each do |msg|
        %li= msg
      
= form_for @family do |f|
  .field
    %table
      %tr
        %td= f.label '和名'
        %td= f.text_field :name_jp
      %tr
        %td= f.label '学名'
        %td= f.text_field :name_la
      %tr
      %td= f.label '英名'
      %td= f.text_field :name_en
  .actions
    = f.submit '保存'
